{
"manifest_version": 3,
"name": "Credibility Checker",
"version": "1.0",
"description": "Checks the credibility of online content using AI.",
"permissions": [
"activeTab",
"scripting",
"contextMenus",
"storage"
],
"action": {
"default_popup": "popup.html",
"default_icon": {
"16": "images/icon16.svg",
"48": "images/icon48.svg",
"128": "images/icon128.svg"
}
},
"content_scripts": [
{
"matches": ["<all_urls>"],
"js": ["content.js"]
}
],
"background": {
"service_worker": "dist/background.js"
},
"content_security_policy": {
"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com;"
}
}